# Development server port
PORT=3000

# Base URL for API requests
NEXT_PUBLIC_API_URL=http://localhost:3000/api

ADMIN_EMAIL=example@example.com
ADMIN_PASSWORD=SecurePassword

# Maximum lifetime for temporary pastes
PASTE_EXPIRATION_DAYS=30

# Save Types:
# 1. JSON (only for development)
# 2. SQLite (production and development)
# 3. MongoDB (production)
# 4. PostgreSQL (production)
# 5. MariaDB (production)
# 6. Cassandra (production)
DATABASE__SAVE_TYPE=JSON
# Path to the directory for local JSON storage by ID
DATABASE__JSON_DB_PATH=./data/pastes/
# Path to the SQLite database file
DATABASE__SQLITE_DB_PATH=./data/pastes.db
# MongoDB database connection string
DATABASE__MONGODB_URI=mongodb://localhost:27017/pastes?authSource=admin
# PostgreSQL database connection string
DATABASE__POSTGRES_URI=postgresql://postgres:postgres@localhost:5432/pastes
# MariaDB database connection string
DATABASE__MARIADB_URI=mysql://root:root@localhost:3306/pastes
# Cassandra database connection string
DATABASE__CASSANDRA_URI=cassandra://localhost:9042/pastes

# Cache Types:
# 1. In-memory (only for development)
# 2. SQLite (embedded, durable KV)
# 3. LevelDB (embedded, durable KV)
# 4. Redis (production)
# 5. Cassandra (production)
CACHE_TYPE=In-memory
# LevelDB (local path for embedded LevelDB cache)
CACHE__LEVELDB_PATH=./data/cache/
# SQLite-as-cache (local SQLite file used as simple KV store)
CACHE__SQLITE_DB_PATH=./data/pastes_cache.db
# Cache lifetime in seconds
CACHE_TTL=3600